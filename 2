    <script>
        // –£–ø—Ä–æ—â–µ–Ω–Ω–∞—è –≤–µ—Ä—Å–∏—è –¥–ª—è –ø—Ä–æ–∏–∑–≤–æ–¥–∏—Ç–µ–ª—å–Ω–æ—Å—Ç–∏
        (function() {
            'use strict';
            
            const tg = window.Telegram && window.Telegram.WebApp;
            if (tg) {
                tg.ready();
                tg.expand();
                
                document.body.style.background = tg.colorScheme === 'dark' 
                    ? 'linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%)' 
                    : 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)';
            }
            
            let clickCount = 0;
            let isAnimating = false;
            let particles = [];
            let gradientPosition = 0;
            let gradientDirection = 1;
            
            // DOM —ç–ª–µ–º–µ–Ω—Ç—ã
            const elements = {
                counter: document.getElementById('counter'),
                clickMessage: document.getElementById('clickMessage'),
                mainText: document.getElementById('mainText'),
                clickPrompt: document.getElementById('clickPrompt'),
                bananaBtn: document.getElementById('bananaBtn'),
                footer: document.querySelector('footer'),
                body: document.body,
                hundredClicksScreen: document.getElementById('hundredClicksScreen'),
                closeHundredClicks: document.getElementById('closeHundredClicks'),
                gameScreen: document.getElementById('gameScreen'),
                gameArea: document.getElementById('gameArea'),
                gameScore: document.getElementById('gameScore'),
                gameMisses: document.getElementById('gameMisses'),
                gameExitBtn: document.getElementById('gameExitBtn'),
                gameOver: document.getElementById('gameOver'),
                gameWin: document.getElementById('gameWin'),
                restartBtn: document.getElementById('restartBtn'),
                restartWinBtn: document.getElementById('restartWinBtn')
            };
            
            // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
            function init() {
                // –ü–æ—Å—Ç–µ–ø–µ–Ω–Ω–æ–µ –ø–æ—è–≤–ª–µ–Ω–∏–µ —ç–ª–µ–º–µ–Ω—Ç–æ–≤
                const showElements = [
                    { el: elements.counter, delay: 100 },
                    { el: elements.mainText, delay: 300 },
                    { el: elements.clickPrompt, delay: 500 },
                    { el: elements.bananaBtn, delay: 700 },
                    { el: elements.footer, delay: 900 }
                ];
                
                showElements.forEach(({ el, delay }) => {
                    setTimeout(() => {
                        el.classList.add('show');
                    }, delay);
                });
                
                // –ê–Ω–∏–º–∞—Ü–∏–∏ —á–µ—Ä–µ–∑ requestAnimationFrame –¥–ª—è –ø—Ä–æ–∏–∑–≤–æ–¥–∏—Ç–µ–ª—å–Ω–æ—Å—Ç–∏
                requestAnimationFrame(animateGradient);
                setTimeout(() => {
                    elements.mainText.classList.add('animated');
                    elements.bananaBtn.classList.add('animated');
                }, 1500);
                
                // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∏–≥—Ä—ã
                initGame();
                bindEvents();
            }
            
            function bindEvents() {
                // –û—Å–Ω–æ–≤–Ω–æ–π —Ç–µ–∫—Å—Ç
                elements.mainText.addEventListener('click', handleMainTextClick);
                elements.mainText.addEventListener('touchstart', handleMainTextClick, { passive: true });
                
                // –ö–Ω–æ–ø–∫–∏
                elements.bananaBtn.addEventListener('click', startGame);
                elements.closeHundredClicks.addEventListener('click', () => {
                    elements.hundredClicksScreen.style.display = 'none';
                });
                
                // –í–∏–±—Ä–∞—Ü–∏—è –ø—Ä–∏ –∫–ª–∏–∫–µ
                function vibrate() {
                    if (navigator.vibrate) {
                        navigator.vibrate(50);
                    }
                }
                
                // –î–µ–ª–µ–≥–∏—Ä–æ–≤–∞–Ω–∏–µ —Å–æ–±—ã—Ç–∏–π –¥–ª—è –ø—Ä–æ–∏–∑–≤–æ–¥–∏—Ç–µ–ª—å–Ω–æ—Å—Ç–∏
                document.addEventListener('click', (e) => {
                    if (e.target === elements.mainText || e.target === elements.bananaBtn) {
                        vibrate();
                    }
                });
            }
            
            function handleMainTextClick(e) {
                e.preventDefault();
                clickCount++;
                
                // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Å—á–µ—Ç—á–∏–∫–∞
                elements.counter.textContent = `–ö–ª–∏–∫–æ–≤: ${clickCount}`;
                
                // –°–æ–æ–±—â–µ–Ω–∏—è –ø—Ä–∏ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω–Ω—ã—Ö –∫–ª–∏–∫–∞—Ö
                const messages = {
                    10: "—Ç—ã —á–µ, –ø—ë—Å?",
                    25: "—Ç–µ–±–µ –¥–µ–ª–∞—Ç—å –Ω–µ—Ö—É–π?",
                    50: "–º–æ–∂–µ—Ç —Ö–∞—Ä–µ?",
                    75: "—É—Ä–æ–∫–∏ —Å–¥–µ–ª–∞–ª?",
                    100: "–ñ–µ–∫–∞ –≥–µ–π"
                };
                
                if (messages[clickCount]) {
                    showClickMessage(messages[clickCount]);
                }
                
                // 100 –∫–ª–∏–∫–æ–≤
                if (clickCount === 100) {
                    elements.hundredClicksScreen.style.display = 'flex';
                    createConfetti(300);
                }
                
                // –ö–æ–Ω—Ñ–µ—Ç—Ç–∏
                if (clickCount % 10 === 0) {
                    createConfetti(30);
                }
            }
            
            function showClickMessage(message) {
                elements.clickMessage.textContent = message;
                elements.clickMessage.classList.remove('show');
                void elements.clickMessage.offsetWidth; // –†–µ—Ñ–ª–æ—É –¥–ª—è –∞–Ω–∏–º–∞—Ü–∏–∏
                elements.clickMessage.classList.add('show');
                
                setTimeout(() => {
                    elements.clickMessage.classList.remove('show');
                }, 3000);
            }
            
            function createConfetti(count = 30) {
                const colors = ['#ff0000', '#ff6b6b', '#ee5a24', '#ffd700', '#4caf50', '#2196f3'];
                
                for (let i = 0; i < count; i++) {
                    const confetti = document.createElement('div');
                    confetti.className = 'confetti';
                    
                    const size = Math.random() * 8 + 4;
                    const color = colors[Math.floor(Math.random() * colors.length)];
                    const posX = Math.random() * window.innerWidth;
                    const posY = -50;
                    
                    confetti.style.width = `${size}px`;
                    confetti.style.height = `${size * 1.5}px`;
                    confetti.style.backgroundColor = color;
                    confetti.style.left = `${posX}px`;
                    confetti.style.top = `${posY}px`;
                    confetti.style.animationDuration = `${Math.random() * 2 + 1}s`;
                    
                    elements.body.appendChild(confetti);
                    
                    setTimeout(() => {
                        confetti.remove();
                    }, 3000);
                }
            }
            
            function animateGradient() {
                if (!isAnimating) return;
                
                gradientPosition += 0.1 * gradientDirection;
                
                if (gradientPosition >= 100 || gradientPosition <= 0) {
                    gradientDirection *= -1;
                }
                
                elements.body.style.backgroundPosition = `${gradientPosition}% 50%`;
                
                requestAnimationFrame(animateGradient);
            }
            
            // –ò–≥—Ä–æ–≤–∞—è –ª–æ–≥–∏–∫–∞ (—É–ø—Ä–æ—â–µ–Ω–Ω–∞—è)
            let gameState = {
                score: 0,
                misses: 0,
                active: false,
                interval: null,
                speed: 3,
                playerX: 0,
                fruits: [],
                initialized: false
            };
            
            function initGame() {
                if (gameState.initialized) return;
                
                // –°–æ–±—ã—Ç–∏—è –∏–≥—Ä—ã
                elements.gameExitBtn.addEventListener('click', exitGame);
                elements.restartBtn.addEventListener('click', startGame);
                elements.restartWinBtn.addEventListener('click', startGame);
                
                // –°–µ–Ω—Å–æ—Ä–Ω–æ–µ —É–ø—Ä–∞–≤–ª–µ–Ω–∏–µ
                let isTouching = false;
                let touchStartX = 0;
                
                elements.gameArea.addEventListener('touchstart', (e) => {
                    isTouching = true;
                    touchStartX = e.touches[0].clientX;
                    e.preventDefault();
                }, { passive: false });
                
                elements.gameArea.addEventListener('touchmove', (e) => {
                    if (!isTouching || !gameState.active) return;
                    
                    const rect = elements.gameArea.getBoundingClientRect();
                    const touchX = e.touches[0].clientX - rect.left;
                    
                    const containerWidth = 60; // –ü—Ä–∏–º–µ—Ä–Ω–∞—è —à–∏—Ä–∏–Ω–∞ –∏–≥—Ä–æ–∫–∞
                    const maxX = elements.gameArea.offsetWidth - containerWidth / 2;
                    
                    gameState.playerX = Math.max(containerWidth / 2, Math.min(touchX, maxX));
                    elements.playerContainer.style.left = `${gameState.playerX}px`;
                    
                    e.preventDefault();
                }, { passive: false });
                
                elements.gameArea.addEventListener('touchend', () => {
                    isTouching = false;
                });
                
                gameState.initialized = true;
            }
            
            function startGame() {
                gameState.score = 0;
                gameState.misses = 0;
                gameState.speed = 3;
                gameState.active = true;
                gameState.fruits = [];
                
                elements.gameScore.textContent = `–û—á–∫–∏: ${gameState.score}`;
                elements.gameMisses.textContent = `–ü—Ä–æ–º–∞—Ö–∏: ${gameState.misses}/3`;
                
                // –°–±—Ä–æ—Å –∏–≥—Ä–æ–≤–æ–≥–æ –ø–æ–ª—è
                elements.gameArea.innerHTML = `
                    <div class="player-container" id="playerContainer">
                        <div class="player-mouth">üëÑ</div>
                        <div class="player-name">–ñ–µ–∫–∞</div>
                    </div>
                `;
                
                gameState.playerContainer = document.getElementById('playerContainer');
                gameState.playerX = elements.gameArea.offsetWidth / 2;
                gameState.playerContainer.style.left = `${gameState.playerX}px`;
                
                elements.gameOver.style.display = 'none';
                elements.gameWin.style.display = 'none';
                elements.gameScreen.classList.add('active');
                
                // –ó–∞–ø—É—Å–∫ –∏–≥—Ä–æ–≤–æ–≥–æ —Ü–∏–∫–ª–∞
                if (gameState.interval) clearInterval(gameState.interval);
                gameState.interval = setInterval(gameLoop, 1000/60);
                
                // –ì–µ–Ω–µ—Ä–∞—Ü–∏—è —Ñ—Ä—É–∫—Ç–æ–≤
                const fruitInterval = setInterval(() => {
                    if (!gameState.active) {
                        clearInterval(fruitInterval);
                        return;
                    }
                    createFruit();
                }, 800);
                
                setTimeout(() => {
                    if (gameState.active && gameState.speed < 10) {
                        gameState.speed += 0.5;
                    }
                }, 5000);
            }
            
            function createFruit() {
                if (!gameState.active) return;
                
                const fruit = document.createElement('div');
                const isEggplant = Math.random() < 0.05;
                
                fruit.className = 'fruit';
                fruit.textContent = isEggplant ? 'üçÜ' : 'üçå';
                
                const maxX = elements.gameArea.offsetWidth - 40;
                const posX = Math.floor(Math.random() * maxX);
                
                fruit.style.left = `${posX}px`;
                fruit.style.top = '0px';
                
                elements.gameArea.appendChild(fruit);
                
                gameState.fruits.push({
                    element: fruit,
                    x: posX,
                    y: 0,
                    isEggplant: isEggplant
                });
            }
            
            function gameLoop() {
                if (!gameState.active) return;
                
                const areaHeight = elements.gameArea.offsetHeight;
                
                for (let i = gameState.fruits.length - 1; i >= 0; i--) {
                    const fruit = gameState.fruits[i];
                    
                    fruit.y += gameState.speed;
                    fruit.element.style.top = `${fruit.y}px`;
                    
                    // –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å—Ç–æ–ª–∫–Ω–æ–≤–µ–Ω–∏—è
                    if (fruit.y + 40 >= areaHeight - 70) {
                        if (!fruit.isEggplant) {
                            gameState.misses++;
                            elements.gameMisses.textContent = `–ü—Ä–æ–º–∞—Ö–∏: ${gameState.misses}/3`;
                            
                            if (gameState.misses >= 3) {
                                gameOver();
                                break;
                            }
                        }
                        
                        fruit.element.remove();
                        gameState.fruits.splice(i, 1);
                    }
                }
                
                if (gameState.score >= 1000) {
                    winGame();
                }
            }
            
            function gameOver() {
                gameState.active = false;
                if (gameState.interval) clearInterval(gameState.interval);
                elements.gameOver.style.display = 'flex';
            }
            
            function winGame() {
                gameState.active = false;
                if (gameState.interval) clearInterval(gameState.interval);
                elements.gameWin.style.display = 'flex';
                createConfetti(100);
            }
            
            function exitGame() {
                gameState.active = false;
                if (gameState.interval) clearInterval(gameState.interval);
                elements.gameScreen.classList.remove('active');
                gameState.fruits = [];
            }
            
            // –ó–∞–ø—É—Å–∫ –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', init);
            } else {
                init();
            }
            
            // –û–ø—Ç–∏–º–∏–∑–∞—Ü–∏—è –¥–ª—è –º–æ–±–∏–ª—å–Ω—ã—Ö —É—Å—Ç—Ä–æ–π—Å—Ç–≤
            window.addEventListener('resize', () => {
                // –î–µ–±–∞—É–Ω—Å —Ä–µ—Å–∞–π–∑–∞ –¥–ª—è –ø—Ä–æ–∏–∑–≤–æ–¥–∏—Ç–µ–ª—å–Ω–æ—Å—Ç–∏
                clearTimeout(window.resizeTimer);
                window.resizeTimer = setTimeout(() => {
                    // –ü–µ—Ä–µ—Å—á–µ—Ç –ø–æ–∑–∏—Ü–∏–π –ø—Ä–∏ —Ä–µ—Å–∞–π–∑–µ
                    if (gameState.active && gameState.playerContainer) {
                        const areaWidth = elements.gameArea.offsetWidth;
                        gameState.playerX = Math.min(gameState.playerX, areaWidth - 30);
                        gameState.playerContainer.style.left = `${gameState.playerX}px`;
                    }
                }, 250);
            });
            
            // –ü—Ä–µ–¥–æ—Ç–≤—Ä–∞—â–µ–Ω–∏–µ –º–∞—Å—à—Ç–∞–±–∏—Ä–æ–≤–∞–Ω–∏—è –Ω–∞ iOS
            document.addEventListener('touchstart', (e) => {
                if (e.touches.length > 1) {
                    e.preventDefault();
                }
            }, { passive: false });
            
            // –°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ —Å–æ—Å—Ç–æ—è–Ω–∏—è –ø—Ä–∏ —Å–∫—Ä—ã—Ç–∏–∏/–ø–æ–∫–∞–∑–∞
            document.addEventListener('visibilitychange', () => {
                if (document.hidden) {
                    isAnimating = false;
                    if (gameState.active) {
                        gameState.active = false;
                        if (gameState.interval) clearInterval(gameState.interval);
                    }
                } else {
                    isAnimating = true;
                    requestAnimationFrame(animateGradient);
                }
            });
            
        })();
    </script>
</body>
</html>
